{
  "name": "icons-font",
  "description": "Include Bootstrap Icons font files with Sass and npm.",
  "version": "0.0.0",
  "private": true,
  "repository": "twbs/examples",
  "license": "MIT",
  "scripts": {
    "build": "npm run copy-assets && npm run css",
    "copy-assets": "shx rm -rf dist && shx mkdir -p ./dist/bootstrap-icons && shx cp -r ../../node_modules/bootstrap-icons ./dist",
    "css-compile": "sass --style compressed --source-map --embed-sources --no-error-css --load-path=../../node_modules scss/:dist/css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace dist/css/styles.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css dist/css/styles.css --content index.html --output dist/css/",
    "css": "npm-run-all css-compile css-prefix css-purge",
    "server": "sirv --dev --no-clear --port 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm-run-all css-lint css"
  },
  "dependencies": {
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "purgecss": "^5.0.0",
    "sass": "^1.60.0",
    "shx": "^0.3.4",
    "sirv-cli": "^2.0.2",
    "stylelint": "^14.16.1",
    "stylelint-config-twbs-bootstrap": "^7.0.0"
  }
}
